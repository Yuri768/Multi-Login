<Window x:Class="Multi_Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Multi_Login"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid MouseDown="Border_MouseDown">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FFE63070" Offset="1"/>
                <GradientStop Color="#FFFE8704" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border Height="390" 
                VerticalAlignment="Top" 
                CornerRadius="0 0 180 0" 
                Background="#100E17"
                MouseDown="Border_MouseDown">
        </Border>
        
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="350">
                <Image Source="/Images/ICON4801.png" 
                       Width="300" 
                       Height="300" 
                       VerticalAlignment="Top"
                       Margin="30"
                       Stretch="Fill"/>
            </StackPanel>

            <StackPanel Width="350">
                <StackPanel x:Name="LoginPanel" Margin="20 40" Visibility="Visible">
                    <TextBlock Text="User Login" 
                               Margin="20"
                               Foreground="White"
                               TextAlignment="Center"
                               FontSize="38"
                               FontFamily="Ink Free"/>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="User" Width="25" Height="25" Foreground="White"/>
                        <TextBox x:Name="txtUsername" Margin="10 0" 
                                 materialDesign:HintAssist.Hint="Enter Username / Email"
                                 Foreground="White"
                                 Width="250"
                                 BorderBrush="White"
                                 CaretBrush="#FFD94448"
                                 SelectionBrush="#FFD94448"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Lock" Width="25" Height="25" Foreground="White"/>
                        <PasswordBox x:Name="txtPassword" Margin="10 0"
                                     materialDesign:HintAssist.Hint="********"
                                     Foreground="White"
                                     Width="250"
                                     BorderBrush="White"
                                     CaretBrush="#FFD94448"
                                     SelectionBrush="#FFD94448"/>
                    </StackPanel>

                    <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Width="100" Height="40"
                                Content="Registrar"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Margin="10,0"
                                BorderBrush="#D94448"
                                Background="#D94448"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="bntRegistrar_Click" Cursor="Hand"/>
                        
                        <Button Width="100"
                                Height="40"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D94448"
                                Background="#D94448"
                                Foreground="White"
                                ToolTip="Login"
                                x:Name="bntLogin"
                                Click="bntLogin_Click"
                                Content="Entrar"
                                Margin="10,0"/>

                        
                    </StackPanel>
                </StackPanel>

                <StackPanel x:Name="RegisterPanel" Margin="20 40" Visibility="Collapsed">
                    <TextBlock Text="Registrar" 
                               Margin="20"
                               Foreground="White"
                               TextAlignment="Center"
                               FontSize="38"
                               FontFamily="Ink Free"/>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="User" Width="25" Height="25" Foreground="White"/>
                        <TextBox x:Name="txtNewUsername" Margin="10 0" 
                                 materialDesign:HintAssist.Hint="Novo usuário"
                                 Foreground="White"
                                 Width="250"
                                 BorderBrush="White"
                                 CaretBrush="#FFD94448"
                                 SelectionBrush="#FFD94448"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Lock" Width="25" Height="25" Foreground="White"/>
                        <PasswordBox x:Name="txtNewPassword" Margin="10 0"
                                     materialDesign:HintAssist.Hint="Senha"
                                     Foreground="White"
                                     Width="250"
                                     BorderBrush="White"
                                     CaretBrush="#FFD94448"
                                     SelectionBrush="#FFD94448"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Lock" Width="25" Height="25" Foreground="White"/>
                        <PasswordBox x:Name="txtConfirmPassword" Margin="10 0"
                                     materialDesign:HintAssist.Hint="Confirmar senha"
                                     Foreground="White"
                                     Width="250"
                                     BorderBrush="White"
                                     CaretBrush="#FFD94448"
                                     SelectionBrush="#FFD94448"/>
                    </StackPanel>

                    <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Width="100"
                                Height="40"
                                Margin="10, 0"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                BorderBrush="#D94448"
                                Background="#D94448"
                                Foreground="White"
                                Click="Button_Click"
                                Content="Login"/>

                        <Button Width="100"
                                Height="40"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D94448"
                                Background="#D94448"
                                Foreground="White"
                                ToolTip="Registrar"
                                x:Name="btnRegister"
                                Content="Entrar"
                                Margin="10, 0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>


            <StackPanel Width="100">
                <Button Margin="10 10" Style="{StaticResource MaterialDesignFloatingActionButton}"
                        Background="{x:Null}"
                        ToolTip="Close"
                        x:Name="bntExit"
                        Click="bntExit_Click"
                        Width="40"
                        Height="40" Cursor="Hand">
                    <materialDesign:PackIcon Kind="close" 
                                             Foreground="White"
                                             Width="20"
                                             Height="20"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
